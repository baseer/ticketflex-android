<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ticketflex.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TicketFlex"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.facebook.LoginActivity">
        </activity>
        <activity
            android:name =".ManageEventActivity"
            android:label="@string/title_activity_manage_event" >
        </activity>
        <activity
            android:name =".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name =".MyTicketsActivity"
            android:label="@string/title_activity_my_tickets" >
        </activity>
        <activity
            android:name =".BuyExistingTicketActivity"
            android:label="@string/title_activity_buy_existing_ticket" >
        </activity>
        <activity
            android:name =".EventsIndexActivity"
            android:label="@string/title_activity_events_index" >
        </activity>
        <activity
            android:name =".EventActivity"
            android:label="@string/title_activity_ticket" >
        </activity>
        <activity
            android:name =".EventsAdminActivity"
            android:label="@string/title_activity_events_admin" >
        </activity>
        <activity
            android:name =".EventAdminActivity"
            android:label="@string/title_activity_event_admin" >
        </activity>
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>
    </application>

</manifest>